<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroEquipos">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="55dp"
        android:text="Registro de Equipos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreEquipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistrarEnfrenamientos2"
        android:layout_width="420dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="21dp"
        android:text="Registrar enfrentamientos"
        app:layout_constraintBottom_toTopOf="@+id/btnListadoEntrenamientos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardar" />

    <Button
        android:id="@+id/btnListadoEntrenamientos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="86dp"
        android:text="Listado de enfrentamientos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarEnfrenamientos2" />

    <EditText
        android:id="@+id/txtNombreEquipo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Nombre del equipo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_url_escudo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txt_url_escudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="URL del escudo del equipo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreEquipo" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="207dp"
        android:layout_height="0dp"
        android:layout_marginBottom="222dp"
        android:text="Guardar"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrarEnfrenamientos2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_url_escudo" />
</androidx.constraintlayout.widget.ConstraintLayout>